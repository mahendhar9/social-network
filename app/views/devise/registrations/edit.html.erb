<div class="container vh-center">
  <div class="form-width">

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="col-md-6">

        <%= f.input :username, label: false, placeholder: "Username", required: true, autofocus: true %>
        <%= f.input :avatar, label: false,  required: true %>
        <%= f.input :email, label: false, placeholder: "Email", required: true %>
        <%= f.input :age, label: false, placeholder: "Age", required: true %>
        <%= f.input :gender, collection: ["Male", "Female"], label: false, required: true %>
        <%= f.input :bio, label: false, placeholder: "About Yourself",required: true %>


        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>
      </div>

      <div class="col-md-6">

        <%= f.input :password, label: false, placeholder: "Password", autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
        <%= f.input :password_confirmation, label: false, placeholder: "Password Confirmation", required: false %>
        <%= f.input :current_password, label: false, placeholder: "Current Password", hint: "we need your current password to confirm your changes", required: true %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update", class: "btn submit-btn" %>
    </div>
    <% end %>

  </div>
</div>
