<div class="container vh-center">
  <div class="form-width">

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, label: false, placeholder: "Email", required: false, autofocus: true %>
      <%= f.input :password, label: false, placeholder: "Password", required: false %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
    <%= f.button :submit, "Log in", class: "submit-btn" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
