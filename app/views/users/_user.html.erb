<div class="col-md-3">
  <div class="thumbnail">
    <%= link_to user_path(user.username) do %>
    <%= image_tag user.avatar.url, class: "img-responsive show-user-pic" %>
    <% end %>
    <div class="caption text-center">
      <h3><%= user.username %></h3>
      <%= friendship_status_button(user) if current_user %>
    </div>
  </div>
</div>
