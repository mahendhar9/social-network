<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @user.avatar.url(:profile_page) %>
      </div>
      <div class="col-md-4">
        <h2><%= @user.username %></h2>
        <h3>Age: <%= @user.age %></h3> 
        <h3>Gender: <%= @user.gender %></h3>
      </div>
      <div class="col-md-4">
        <h2>About Me</h2>
        <p><%= @user.bio %></p>
      </div>
    </div>
  </div>
</div>