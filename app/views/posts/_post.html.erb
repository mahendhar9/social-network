<div class="panel panel-default">
  <div class="panel-heading">
    <%= link_to user_path(post.user.username) do %>
    <%= image_tag post.user.avatar.url(:thumb) %> <%= post.user.username %>
    <% end %> posted this about <%= time_ago_in_words(post.created_at) %> ago.
    <% if current_user == post.user %>
    <%= link_to post_path(post), method: :delete, data: {confirm: "Are you sure you want to delete this?"} do %>
    <%= fa_icon "times", class: "pull-right delete-post" %>
    <% end %>
    <%= link_to edit_post_path(post) do %>
    <%= fa_icon "pencil", class: "pull-right edit-post" %>
    <% end %>
    <% end %>
  </div>
  <div class="panel-body post-content">
    <%= raw(post.content_html) %>
  </div>
</div>